# Environment variables for development
# Copy this file to .env and fill in your actual values

# Database Configuration
# Required: PostgreSQL database connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://username:password@localhost:5432/bookmark_manager

# Server Configuration
# Port for the Express server (default: 4001)
PORT=4001

# Node environment (development/production/test)
NODE_ENV=development

# Authentication
# Secret key for session encryption (generate a strong random string in production)
SESSION_SECRET=yeiPePtBiSWruMwysJI4ZbOCH7DWL5ZN

# Optional: Vite-specific environment variables (for frontend)
# These are prefixed with VITE_ and will be available to the client
# VITE_API_URL=http://localhost:4001

VITE_PUBLIC_BASE_URL=https://vensera.store

OPENAI_API_KEY=
OPENAI_TAG_MODEL=
OPENAI_TAGS_MAX=8
OPENAI_TIMEOUT_MS=6000
OPENAI_DESC_MODEL=

