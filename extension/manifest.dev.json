{
  "manifest_version": 3,
  "name": "Memorize Bookmark (Dev)",
  "version": "0.2.1",
  "description": "Dev build: save and organize current page to Memorize Vault.",
  "action": {
    "default_title": "Save to Memorize",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png"
    }
  },
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://memorize.click/*"],
  "optional_host_permissions": ["http://localhost:4001/*"],
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "128": "icon-128.png"
  }
}
